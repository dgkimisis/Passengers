@model IEnumerable<Passengers.Models.Passenger>



<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>About</title>
    <style>
        table {
            font-family: arial, sans-serif;
            border-collapse: collapse;
            width: 100%;
        }

        td, th {
            border: 1px solid #dddddd;
            text-align: left;
            padding: 8px;
        }

        tr:nth-child(even) {
            background-color: #dddddd;
        }
    </style>
</head>
<body>
    <table>
        <tr>
            <th>First Name</th>
            <th>Last Name</th>
        </tr>    
        @foreach (var item in Model)
        {
            <tr>
                     @*Here we execute the Controller Method About(). We do not declare it because
                    by default, the About.cshtml is looking into Controller Method About()*@
                <td>@Html.DisplayFor(modelItem => item.FirstName)</td>
                <td>@Html.DisplayFor(modelItem => item.LastName)</td>
            </tr>
        }
    </table>
    @*Here we execute the Controller Method Index() and we also declare the Home folder
        (the foldex which Index is placed within)*@
    <form method="get" action="@Url.Action("Index", "Home")">
        <button type="submit" style="margin-bottom:15px; margin-left:100px;">Add more passengers</button>
    </form>

    <form method="get" action="@Url.Action("Clear", "Home")">
        <button type="submit" style="margin-left:100px;">Clear Passenger List</button>
    </form>

</body>
</html>
