@model Passengers.Models.Passenger

<!DOCTYPE html>
<html>
<head>
    <title></title>
    <meta charset="utf-8" />
</head>
<body>
    <h4 style="margin-left:100px;">PASSENGER DETAILS</h4>
    <form method="post" action="@Url.Action("AddIndex", "Home")">
        <div>
            <label for="Name" style="margin-left:100px;">First Name:</label>
            @Html.TextBoxFor(m => m.FirstName)
            @Html.ValidationMessageFor(m => m.FirstName, "", new { @class = "text-danger"})
            <br />
            <label for="Name" style="margin-left:100px;">Last Name:</label>
            @Html.TextBoxFor(m => m.LastName)
            @Html.ValidationMessageFor(m => m.LastName, "", new { @class = "text-danger" })
            <br />
            <button type="submit" style="margin-bottom:30px; margin-left:100px;">Add Passenger</button>
        </div>
    </form>
    <form method="get" action="@Url.Action("About", "Home")">
    <button type="submit" style="margin-left:100px;">Go to Passengers Overview</button>
</form>

</body>
</html>
